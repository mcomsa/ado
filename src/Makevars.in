CXX_STD = @STDVER@

PKG_LIBS = parser/parser.a
PKG_CPPFLAGS = -I../inst/include

.PHONY: all parser
all: $(SHLIB)
$(SHLIB): parser

parser:
	(cd parser && $(MAKE) CXX="$(CXX)" AR="$(AR)" \
	 					  CXXFLAGS="$(CXXFLAGS) @CXXFLAGS@ -c" \
	 					  CPPFLAGS="$(CPPFLAGS) @CPPFLAGS@ -I../../inst/include/")
